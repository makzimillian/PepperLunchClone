<h1>Welcome to PepperLunch Tracker</h1>

<div class="timetable" ng-controller="TimetableCtrl">
  <h2>You have taken {{ lunchCount }} times of PepperLunch</h2>

  <div class="row">
    <div class="col-md-4 col-md-offset-8 btn btn-success" ng-click="submitCount()">Save</div>
  </div>

  <div class="row week" ng-repeat="week in weeks">
    <div class="col-md-2 number">Week {{ $index + 1 }}</div>

      <div class="col-md-2 day" ng-repeat="day in week">
        <div class="btn" ng-class="getClass(day)" ng-click="increment($parent.$index, $index)"></div>
    </div>
  </div>
</div>